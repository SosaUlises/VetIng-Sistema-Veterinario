@page
@using VetIngSistemaVeterinario.Modelo.ViewModel
@model VetIngSistemaVeterinario.Modelo.ViewModel.ClienteRegistroViewModel

@{
    ViewData["Title"] = "Registrar Cliente";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Cliente - VetIng</title>
    <link rel="stylesheet" href="~/css/registrar_cliente_style2.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="register-container">
        <div class="container-img-register"></div> <div class="container-formulario">
            <div class="ingreso-correo"> <div class="responsive"></div> <h1>Registrarse en VetIng</h1> <div class="icons"> <a href="#"><i class="fa-brands fa-google"></i></a> <a href="#"><i class="fa-brands fa-twitter"></i></a> </div> </div>
           
            <div class="formulario">
                <form asp-action="RegistrarCliente" asp-controller="Cuenta" method="post">
                    @Html.AntiForgeryToken()
                    
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>

                    <label asp-for="Apellido"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>

                    <label asp-for="Dni"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>

                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label asp-for="Password">Contraseña:</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <label asp-for="Direccion"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>

                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                    <button type="submit" class="button">Crear Cuenta</button>

                    <p>¿Ya eres miembro?<a asp-controller="Cuenta" asp-action="Login" class="signIn"> Iniciar sesión</a></p>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>